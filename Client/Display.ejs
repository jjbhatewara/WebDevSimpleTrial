    <link rel="stylesheet" href="c.css">

    <title>Display</title>
</head>

<body> 
    <br><br><br><br>
    </main>
    <div class="container bg-info font-weight-bold" id="cs">
        <h1>Records in mySql Database</h1>

        <table id=" table" class="table table-dark table-stripped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NAME</th>
                    <th scope="col">ROLL NUMBER</th>
                    <th scope="col">BRANCH</th>
                    <!-- <th scope="col">EDIT</th> -->
                    <th scope="col">DELETE</th> 
                </tr>
            </thead>
            <tbody>
                <% rows.forEach(function(row){ %>
                    <tr>
                    <th> <%= row.ID %> </th>
                    <th> <%= row.Name %> </th>
                    <th> <%= row.Roll %> </th>
                    <th> <%= row.branch %> </th>
                   <!--  <th> <a href="http://127.0.0.1:5500/Client/edit.html">  <button type="button" id = 'editBtn'>EDIT</button> </a> </th>  -->
                    <!-- <th><button type="button" id = 'editBtn' onclick="location.reload();" >EDIT</button></th> -->
                    <th> <button id="delBtn" onclick="fetch('http://localhost:5000/delete/<%= row.ID %>' ,{method:'POST'});" ondblclick="location.reload(); ">DELETE</button> </th> 
                    </tr>
                <% }); %>
            </tbody>

        </table>
        
        </main>
        
    </div>

    
